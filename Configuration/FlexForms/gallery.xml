<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sGallery>
			<ROOT>
				<TCEforms>
					<sheetTitle>Options</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.folder>
						<TCEforms>
							<label>Image Folder (Typo3 folder selection is broken again. Until it is fixed, you have to select one of the images in the folder so the folder can be scanned.)</label>
							<config>
								<type>group</type>
								<internal_type>file</internal_type>
								<maxitems>1</maxitems>
								<size>1</size>
								<multiple>0</multiple>
							</config>
						</TCEforms>
					</settings.folder>
					<settings.sorting>
						<TCEforms>
							<label>Sorting</label>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Standard</numIndex>
										<numIndex index="1">standard</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Natural</numIndex>
										<numIndex index="1">natural</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Natural (DESC)</numIndex>
										<numIndex index="1">naturalDesc</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Alphabetical</numIndex>
										<numIndex index="1">alphabetical</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">Alphabetical (DESC)</numIndex>
										<numIndex index="1">alphabeticalDesc</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">Date</numIndex>
										<numIndex index="1">date</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">Date (DESC)</numIndex>
										<numIndex index="1">dateDesc</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.sorting>
					<settings.previewcount>
						<TCEforms>
							<label>Prewiev count (0 or empty means no limit)</label>
							<config>
								<type>input</type>
								<size>4</size>
								<eval>int</eval>
								<clear>true</clear>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.previewcount>
				</el>
			</ROOT>
		</sGallery>
	</sheets>
</T3DataStructure>
